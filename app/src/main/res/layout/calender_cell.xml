<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/calendar_cell_root"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/cell_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:background="@drawable/seleted_date_bg"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cellDayText"
        android:text="1"
        style="@style/TextViewLato.ExtraLarge.Bold"
        android:textSize="14sp"
        app:layout_constraintDimensionRatio="w,1:1"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <View
        android:id="@+id/taskIndicator"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/seleted_date_bg"
        app:layout_constraintEnd_toEndOf="@+id/cellDayText"
        app:layout_constraintStart_toStartOf="@id/cellDayText"
        app:layout_constraintTop_toBottomOf="@+id/cellDayText"
        />

</androidx.constraintlayout.widget.ConstraintLayout>